<Window x:Class="WPF_Logowanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Logowanie"
        mc:Ignorable="d"
        Title="Logowanie" Height="450" Width="500">
    <Grid Background="Bisque">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Label FontSize="20">Login:</Label>
            <TextBox x:Name="TB_Login"
                    Width="200"
                     FontSize="20"
                ></TextBox>
            <Label FontSize="20">Haslo:</Label>
            <PasswordBox x:Name="PB_Haslo"
                    Width="200"
                     FontSize="20"
                         MaxLength="32"
                ></PasswordBox>
            <Button Content="Zaloguj"
                    FontSize="20"
                    Margin="10"
                    Click="BT_Zaloguj_Click"
                    ></Button>
        </StackPanel>
    </Grid>
</Window>
